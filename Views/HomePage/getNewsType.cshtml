@model List<HoiTroWebsite.Models.NewsType>

<div class="blog">
    <div class="container">
        @foreach (var i in Model)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2><a href="@ViewBag.meta/@i.meta">@i.title</a></h2>
                        <p>Lorem Ipsum available, but the majority have suffered </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.Action("getNews", "HomePage", new { id = @i.id, metatitle = @ViewBag.meta })
            </div>
        }
    </div>

</div>