@model List<HoiTroWebsite.Models.NewsViewModel>

<div class="blog">
    <div class="row">
        <div class="col-md-12">
            <div class="titlepage">
                <h2>Blog</h2>
                <p>Lorem Ipsum available, but the majority have suffered </p>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-md-4">
                <div class="blog_box">
                    <div class="blog_img">
                        <figure><img src="@i.ImagePath" alt="#" /></figure>
                    </div>
                    <div class="blog_room" style="font-family:'Times New Roman';">
                        <h2>@i.Title</h2>
                        <span>@i.Author </span>
                        <p style="font-style:italic">@Html.DisplayFor(modelItem => i.BriefDescription)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>*