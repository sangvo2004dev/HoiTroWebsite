@using HoiTroWebsite.Models2;
@model List<HoiTroWebsite.Models.RoomInfo>

@{
    ViewBag.Title = ViewBag.title;
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mb-4">
    <div class="row">

        <!-- danh sách phòng -->
        <div class="col-8 pr-2">
            <div class="left-content">
                <section class="category-section">
                    <div class="category-title h4">
                        <a href="javascript:void(0);">@ViewBag.title</a>
                    </div>
                    <ul class="post-list">
                        @{ 
                            //ViewBag.meta;
                            Html.RenderPartial("GetListRoomInfo", Model);
                            }
                        @*@{ Html.RenderAction("GetListRoomInfo", "RoomInfo", new { roomTypeID = Model.id, metaTitle = Model.meta }); }*@
                    </ul>
                </section>
            </div>

            <div class="js-paging mt-3">
                @{
                    int pg = ViewBag.page;
                    int recsCount = ViewBag.recsCount;
                    string href = ViewBag.url;
                    var pager = new Paginate(recsCount, pg, ViewBag.pagesize ?? 10, href);
                    Html.RenderPartial("~/Views/Shared/_Paging.cshtml", pager);
                }
            </div>
        </div>

        <!-- phần bên phải -->
        <div class="col-4 pl-2">
            <div class="right-content">

                @{ Html.RenderAction("GetMiniNews", "MainPartial"); }

            </div>
        </div>

    </div>
</div>
