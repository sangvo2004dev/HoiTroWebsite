@{
    var roomType_meta_with_name = new HoiTroWebsite.Models.HoiTroEntities().RoomTypes.OrderBy(rt => rt.order).Select(rt => new { id = rt.id, meta = rt.meta, name = rt.title }).ToList();
    bool check_first_roomType = false;
}

<div data-bs-backdrop="static" data-bs-scroll="true" tabindex="-1" id="myoffcanvas"
     aria-labelledby="offcanvasAdvanceLabel" class="offcanvas offcanvas-bottom rounded-4"
     style="--bs-offcanvas-height: 90%; max-width: 600px; margin: 0px auto;" aria-modal="true" role="dialog">
    <div class="offcanvas-header shadow-sm z-1 px-4">
        <div id="offcanvasAdvanceLabel" class="fs-4">Bộ lọc</div> <button type="button" data-bs-dismiss="offcanvas"
                                                                          aria-label="Close" class="btn-close p-3"></button>
    </div>
    <div class="offcanvas-body p-4" style="--bs-bg-opacity: 0.08;">
        <form id="form-tim-kiem" action="@Url.Action("GetRoomsBySearchValues", "RoomInfo")" method="post">
            <div class="mb-4 pb-2">
                <div class="fs-5 fw-normal mb-3">Danh mục cho thuê</div>
                <div class="d-flex gap-1 fs-8 flex-wrap">
                    @*<div class="text-nowrap">
                            <input type="radio" class="radio-custom" id="danh_muc_1" name="danh_muc" value="all" checked>
                            <label for="danh_muc_1" class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden">
                                Tất
                                cả
                            </label>
                        </div>
                        <div class="text-nowrap">
                            <input type="radio" class="radio-custom" id="danh_muc_2" name="danh_muc" value="2">
                            <label for="danh_muc_2" class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden">
                                Phòng
                                trọ
                            </label>
                        </div>
                        <div class="text-nowrap">
                            <input type="radio" class="radio-custom" id="danh_muc_3" name="danh_muc" value="3">
                            <label for="danh_muc_3" class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden">
                                Nhà
                                riêng
                            </label>
                        </div>*@
                    @foreach (var rt in roomType_meta_with_name)
                    {
                        <div class="text-nowrap">
                            <input type="radio" class="radio-custom" id="danh_muc_@rt.id" name="danh_muc" value="@rt.id" data-meta="@rt.meta" @(check_first_roomType == false ? "checked" : "")>
                            <label for="danh_muc_@rt.id" class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden">
                                @rt.name
                            </label>
                        </div>
                        check_first_roomType = true;
                    }
                </div>
            </div>
            <div class="mb-4 pb-2">
                <div class="fs-5 fw-normal mb-2">Lọc theo khu vực</div>
                <div class="row gx-1">
                    <div class="col-4">
                        <label class="form-label mb-1">Tỉnh thành</label>
                        <select aria-label="Chọn tỉnh thành" name="tinhthanhpho" class="js-select-province form-select form-select-lg shadow-sm rounded-4 fs-7 ps-2">
                            <option value="">Toàn Quốc</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <label class="form-label mb-1">Quận huyện</label> <select aria-label="Chọn quận huyện" name="quanhuyen"
                                                                                  class="js-select-district form-select form-select-lg shadow-sm rounded-4 fs-7 ps-2">
                            <option value="">Tất cả</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <label class="form-label mb-1">Phường xã</label> <select aria-label="Chọn phường xã" name="phuongxa"
                                                                                 class="js-select-ward form-select form-select-lg shadow-sm rounded-4 fs-7 ps-2">
                            <option value="">Tất cả</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-4 pb-2">
                <div class="fs-5 fw-normal mb-3">Khoảng giá</div>
                <div class="mb-3 mt-4">
                    <div class="js-price-slider rounded-5" id="gia_tien" style="background-color: #ffecec !important;">
                    </div>
                    <!-- <span class="js-left-tooltip tooltip text-danger">sang</span>
                    <div class="js-right-tooltip tooltip text-danger">sang</div> -->
                    <input type="radio" hidden id="price_range" data-min-value="" data-max-value="" name="price">
                </div>
                <div class="row gx-1 fs-8">
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_1" data-min-value="" data-max-value=""
                               name="price" checked />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden"
                               for="price_1">Tất cả</label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_2" data-min-value="" data-max-value="1"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden"
                               for="price_2">Dưới 1 triệu</label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_3" data-min-value="1" data-max-value="2"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_3">
                            1
                            - 2 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_4" data-min-value="2" data-max-value="3"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_4">
                            2
                            - 3 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_5" data-min-value="3" data-max-value="5"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_5">
                            3
                            - 5 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_6" data-min-value="5" data-max-value="7"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_6">
                            5
                            - 7 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_7" data-min-value="7" data-max-value="10"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_7">
                            7
                            - 10 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_8" data-min-value="10" data-max-value="15"
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="price_8">
                            10
                            - 15 triệu
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-price-tag radio-custom" id="price_9" data-min-value="15" data-max-value=""
                               name="price" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden"
                               for="price_9">Trên 15 triệu</label>
                    </div>
                </div>
            </div>
            <div class="mb-4 pb-2">
                <div class="fs-5 fw-normal mb-3">Khoảng diện tích</div>
                <div class="mb-3 mt-4">
                    <div class="js-area-slider rounded-5" id="dien_tich" style="background-color: #ffecec !important;">
                    </div>
                    <input type="radio" hidden id="area_range" data-min-value="" data-max-value="" name="area">
                </div>
                <div class="row gx-1 text-nowrap fs-8">
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_1" data-min-value="" data-max-value=""
                               name="area" checked />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_1">
                            Tất
                            cả
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_2" data-min-value="" data-max-value="20"
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_2">
                            Dưới
                            20m<sup>2</sup>
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_3" data-min-value="20" data-max-value="30"
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_3">
                            Từ
                            20m<sup>2</sup> - 30m<sup>2</sup>
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_4" data-min-value="30" data-max-value="70"
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_4">
                            Từ
                            30m<sup>2</sup> - 50m<sup>2</sup>
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_5" data-min-value="50" data-max-value="70"
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_5">
                            Từ
                            50m<sup>2</sup> - 70m<sup>2</sup>
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_6" data-min-value="70" data-max-value="90"
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_6">
                            Từ
                            70m<sup>2</sup> - 90m<sup>2</sup>
                        </label>
                    </div>
                    <div class="w-auto">
                        <input type="radio" class="js-area-tag radio-custom" id="area_7" data-min-value="90" data-max-value=""
                               name="area" />
                        <label class="border shadow-sm rounded-4 px-3 p-2 overflow-hidden" for="area_7">
                            Trên
                            90m<sup>2</sup>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="offcanvas-footer p-2 p-md-3 px-4 shadow-lg z-1">
        <div class="btn btn-danger btn-lg fs-6 w-100 p-25 rounded-4 js-btn-submit">Áp dụng</div>
    </div>
</div>