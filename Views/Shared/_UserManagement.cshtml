<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="data:image/svg+xml,%3csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%2033%2034'%20fill-rule='evenodd'%20stroke-linejoin='round'%20stroke-miterlimit='2'%20xmlns:v='https://vecta.io/nano'%3e%3cpath%20d='M3%2027.472c0%204.409%206.18%205.552%2013.5%205.552%207.281%200%2013.5-1.103%2013.5-5.513s-6.179-5.552-13.5-5.552c-7.281%200-13.5%201.103-13.5%205.513z'%20fill='%23435ebe'%20fill-rule='nonzero'/%3e%3ccircle%20cx='16.5'%20cy='8.8'%20r='8.8'%20fill='%2341bbdd'/%3e%3c/svg%3e" type="image/x-icon">
    <link rel="shortcut icon" href="data:image/png;base64," type="image/png">

    <link rel="stylesheet" crossorigin href="~/dist/assets/compiled/css/app.css">
    <link rel="stylesheet" crossorigin href="~/dist/assets/compiled/css/iconly.css">
    <link rel="stylesheet" href="~/Content/user.dashboard.css" />
    <link href="~/Content/hoitro.main.css" rel="stylesheet" />
    @Html.Raw("<link rel=\"stylesheet\" href=\"/dist/assets/extensions/@fortawesome/fontawesome-free/css/all.min.css\">\n")

<link href="~/dist/assets/extensions/sweetalert2/sweetalert2.css" rel="stylesheet" />

    @RenderSection(name: "css", required: false)
</head>

<body @RenderSection(name: "scrollspy", required: false)>
    <script src="~/dist/assets/static/js/initTheme.js"></script>
    <div id="app">
        <div id="sidebar" class="z-n1">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header position-relative">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="logo">
                            <a href="@Url.Action("Index", "HomePage")"><img src="~/Content/images/logo-web.jpg" style="width: 135px; height: 54px; object-fit: cover" alt="Logo" srcset=""></a>
                        </div>                        
                        <div class="sidebar-toggler  x">
                            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">

                        <li class="sidebar-title">Menu</li>

                        <li class="sidebar-item @RenderSection("dang_tin_active", false)">
                            <a href="@Url.Action("PostRoom", "User")" class="sidebar-link">
                                <i class="fa-fw select-all fas"></i>
                                <span>Đăng tin mới</span>
                            </a>
                        </li>

                        <li class="sidebar-item @RenderSection("ql_tin_dang_active", false)">
                            <a href="@Url.Action("ManagePostRooms", "User")" class="sidebar-link">
                                <i class="fa-fw select-all fas"></i>
                                <span>Quản lý tin đăng</span>
                            </a>
                        </li>

                        <li class="sidebar-item @RenderSection("ql_tai_khoan_active", false)">
                            <a href="@Url.Action("UpdateProfile", "User")" class="sidebar-link">
                                <i class="fa-fw select-all fas"></i>
                                <span>Quản lý tài khoản</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <a href="@Url.Action("Logout", "User")" class="sidebar-link">
                                <i class="fa-fw select-all fas"></i>
                                <span>Đăng xuất</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>
            @RenderBody()
        </div>
    </div>

    <script src="~/dist/assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>

    <script src="~/dist/assets/compiled/js/app.js"></script>
    <script src="~/dist/assets/extensions/jquery/jquery.min.js"></script>

    <script src="~/Scripts/my-js/hoitro.user.dashboard.js"></script>

    <script src="~/dist/assets/extensions/sweetalert2/sweetalert2.all.min.js"></script>

    @RenderSection(name: "script", required: false)
</body>

</html>