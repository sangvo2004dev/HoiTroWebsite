@{
    ViewBag.Title = "Tin tuc";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@model List<HoiTroWebsite.Models.News>

<div class="blog">
    <div class="row">
        <div class="col-md-12">
            <div class="titlepage">
                <h2>Blog</h2>
                <p>Lorem Ipsum available, but the majority have suffered </p>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-md-4">
                <div class="blog_box">
                    <div class="blog_img">
                        @*<figure><img src="~/Content/images/blog3.jpg" alt="#" /></figure>*@
                    </div>
                    <div class="blog_room">
                        <h3>@i.title</h3>
                        <span>@i.author </span>
                        <p>@Html.DisplayFor(modelItem => i.content)</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>*
