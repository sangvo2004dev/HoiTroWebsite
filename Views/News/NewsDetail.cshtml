@model HoiTroWebsite.Models.News

@{
    ViewBag.Title = Model.title;
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@{

    string new_img_path = Model.imagePath ?? "/Content/images/default-news.jpg";
    string file_name = Model.file_name ?? "default-news.jpg";
}

@*@Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")*@

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            <nav aria-label="breadcrumb mb-3">
                <ol class="breadcrumb pb-0">
                    <li class="breadcrumb-item"><a href="/trang-chu">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/tin-tuc">Tin tức</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="/tin-tuc/@ViewBag.metaNewsType" style="color: inherit;">@ViewBag.titleNewsType</a></li>
                </ol>
            </nav>
        </div>
        <div class="col-md-8 pe-2">            

            <div class="left-content">

                <article class="the-article">
                    <header class="page-header">
                        <h1 class="page-h1">@Model.title</h1>
                    </header>
                    <div class="article-summary">
                        <p>@Model.brief_description</p>
                    </div>
                    <div class="article-main-content">
                        <figure style="text-align: center;">
                            <img src="@new_img_path" alt="@Model.title" width="960" height="720">
                            <figcaption>
                                <em>@Model.title</em>
                            </figcaption>
                        </figure>
                        <div>@Html.Raw(Model.detail_description)</div>
                    </div>
                    <div class="article-tags">
                        <span>Từ khóa:@Model.NewsType.title</span>
                    </div>
                    <span>Tác giả:@Model.author</span>
                </article>
            </div>
        </div>

        <div class="col-md-4 ps-2 mt-2 mt-md-0">
            <div class="right-content">

                @{
                    Html.RenderAction("GetLatestRoomList", "MainPartial");
                    Html.RenderAction("GetMiniNews", "MainPartial");
                }

            </div>
        </div>
    </div>
</div>