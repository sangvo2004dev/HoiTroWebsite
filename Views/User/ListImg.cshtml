@model IEnumerable<HoiTroWebsite.Models.RoomImg>

@foreach (var i in Model)
{
    <div class="photo_item col-md-2 col-3">
        <div class="photo">
            <img src="@i.serverimagePath@i.imagePath@i.file_name">
        </div>
        <div class="dz-progress"><span class="dz-upload"></span></div>
        <div class="bottom clearfix">
            <span class="photo_delete" data-dz-remove="">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="feather feather-trash-2">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                    </path>
                    <line x1="10" y1="11" x2="10" y2="17"></line>
                    <line x1="14" y1="11" x2="14" y2="17"></line>
                </svg> Xóa
            </span><input value="@i.file_name" type="hidden" data-order="@i.order">
        </div>
    </div>
}