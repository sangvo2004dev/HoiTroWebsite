@model HoiTroWebsite.Models.RoomImage

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RoomImage</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Của bài đăng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomInfo.title)
        </dd>
        <dt>
            @Html.DisplayName("Ảnh")
        </dt>

        <dd>
            <div class="col-md-4">
                <img src="~/Content/images/@Model.file_name" width="100px" />
            </div>
        </dd>

        <dt>
            @Html.DisplayName("meta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.meta)
        </dd>

        <dt>
            @Html.DisplayName("Hiển thị")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hide)
        </dd>

        <dt>
            @Html.DisplayName("Sắp xếp")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order)
        </dd>

        <dt>
            @Html.DisplayName("Ngày tạo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datebegin)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "RoomImages", FormMethod.Post, new { id = "form-delete" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id) <!-- Ẩn trường id để lấy id -->

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
