@model IEnumerable<HoiTroWebsite.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@section ql_menu_active {active}

<div class="container">
    <button class="btn btn-success text-white" id="btnAdd">

        <a href="#" class="" data-bs-toggle="modal" data-bs-target="#modalMenu">
            <i class="fa fa-plus" aria-hidden="true"></i>Tạo thêm
        </a>
    </button>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-bordered table-hover myTable" id="dataTables-example">
                <thead>
    <tr>
        <th>
                            @Html.DisplayName("STT")
        </th>
        <th>
                            @Html.DisplayName("Tên")
        </th>
        <th>
                            @Html.DisplayName("Liên kết")
        </th>
        <th>
                            @Html.DisplayName("Meta")
        </th>
        <th>
                            @Html.DisplayName("Hiển thị")
        </th>
        <th>
                            @Html.DisplayName("Sắp xếp")
        </th>
        <th>
                            @Html.DisplayName("Ngày tạo")
        </th>
                        <th>
                            @Html.DisplayName("Có menu con")
                        </th>
        <th></th>
    </tr>
                </thead>
                <tbody id="tbmenu">
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal" id="modalMenu" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @*<p>Modal body text goes here.</p>*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section script
{
    <script>
        $(document).ready(function () {
            LoadMenu();
        })
        // Create
        $('#btnAdd').click(function () {
            $.ajax({
                url: '/Admin/Menus/Create',
                type: 'get',
                success: function (data) {
                    //console.log(data);
                    $('#modalMenu').find('.modal-body').html(data);
                },
            });
        })
        // Detail
        $(document).on('click', '.btnDetail', function () {
            var id = $(this).data('id');

            $.ajax({
                url: '/Admin/Menus/Details/' + id,
                type: 'get',
                success: function (data) {
                    $('#modalMenu').find('.modal-body').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                }
            });
        });
        // Edit
        $(document).on('click', '.btnEdit', function () {
            var id = $(this).data('id');

            $.ajax({
                url: '/Admin/Menus/Edit/' + id,
                type: 'get',
                success: function (data) {
                    $('#modalMenu').find('.modal-body').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                }
            });
        });
        // Delete
        $(document).on('click', '.btnDelete', function () {
            var id = $(this).data('id');

            $.ajax({
                url: '/Admin/Menus/Delete/' + id,
                type: 'get',
                success: function (data) {
                    $('#modalMenu').find('.modal-body').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                }
            });
        });

        function LoadMenu() {
            $.ajax({
                url: '/Admin/Menus/getMenu',
                type: 'get',
                success: function (data) {
                    //console.log(data)
                    if (data.code == 200) {

                        $('#tbmenu').empty();
                        console.log(data)
                        $.each(data.menu, function (k, v) {
                            console.log(data.menu)
                            const dateBegin = v.DateBegin === null ? '' : formatDate(v.DateBegin);

                            let tr = '<tr id="' + v.Id + '">'
                            tr += '<td>' + (k + 1) + '</td>';
                            tr += '<td>' + v.Name + '</td>';
                            tr += '<td>' + v.Link + '</td>';
                            tr += '<td>' + v.Meta + '</td>';
                            tr += '<td>' + v.Hide + '</td>';
                            tr += '<td>' + v.Order + '</td>';
                            tr += '<td>' + dateBegin + '</td>';
                            tr += '<td>' + v.HasSubMenu + '</td>';
                            tr += '<td class="text-right">';
                            tr += '<button class="btn btn-xs btn-info btnDetail" data-id="' + v.Id + '"><i class="fa fa-info-circle" aria-hidden="true"></i><a href="#" class="" data-bs-toggle="modal" data-bs-target="#modalMenu"> Chi tiết </button>';
                            tr += '<button class="btn btn-xs btn-warning btnEdit" data-id="' + v.Id + '"><i class="fa fa-pencil-square-o" aria-hidden="true"></i><a href="#" class="" data-bs-toggle="modal" data-bs-target="#modalMenu"> Chỉnh sửa </button>';
                            tr += '<button class="btn btn-xs btn-danger btnDelete" data-id="' + v.Id + '"><i class="fa fa-trash" aria-hidden="true"></i><a href="#" class="" data-bs-toggle="modal" data-bs-target="#modalMenu"> Xóa </button>';
                            tr += '</td>';
                            tr += '</tr>';
                            $('#tbmenu').append(tr);
                        });

                        if ($.fn.dataTable.isDataTable('#dataTables-example')) {

                            var table = $('#dataTables-example').DataTable();
                            table.clear();
                            table.rows.add($('#tbmenu').find('tr'));
                            table.draw();
                        } else {

                            $('#dataTables-example').DataTable({
                                "paging": true,
                                "searching": true,
                                "ordering": true
                            });
                        }

                        attachEventHandlers();
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                }
            });
        }

        function formatDate(jsonDate) {

            const timestamp = parseInt(jsonDate.replace(/\/Date\((\d+)\)\//, '$1'));
            const date = new Date(timestamp);

            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();

            return `${day}/${month}/${year}`;
        }

        // Submet create
        $(document).on('submit', '#form-create', function (e) {
            e.preventDefault();
            const form_data = $(this).serializeArray();
            console.log(form_data);
            $.ajax({
                url: '/Admin/Menus/Create',
                type: 'POST',
                data: form_data,
                success: function (response) {
                    console.log(response)
                    if (response.code == 200) {
                        $('#modalMenu').find('.btn-close').click();
                        LoadMenu();
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                }
            });
        });
        // Submit edit
        $(document).on('submit', '#form-edit', function (e) {
            e.preventDefault();

            const form_data = new FormData(this);
            const id = $(this).find("input[name='id']").val();

            $.ajax({
                url: '/Admin/Menus/Edit/' + id,
                type: 'POST',
                data: form_data,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log(response);
                    if (response.code === 200) {
                        $('#modalMenu').find('.btn-close').click();
                        LoadMenu();
                    } else {
                        alert(response.msg);
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                    alert("Có lỗi xảy ra khi cập nhật menu.");
                }
            });
        });

        // Submit delete
        $(document).on('submit', '#form-delete', function (e) {
            e.preventDefault();

            const id = $(this).find("input[name='id']").val();
            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '/Admin/Menus/DeleteConfirmed',
                type: 'POST',
                data: { id: id, __RequestVerificationToken: token },
                success: function (response) {
                    console.log(response);
                    if (response.code == 200) {
                        $('#modalMenu').find('.btn-close').click();
                        LoadMenu();
                    } else {
                        alert(response.msg);
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Lỗi:', error);
                    console.error('Mã trạng thái:', xhr.status);
                    console.error('Nội dung lỗi:', xhr.responseText);
                    alert("Có lỗi xảy ra khi xóa menu. Vui lòng kiểm tra log lỗi.");
}
            });
        });

    </script>

    <script>
        $(document).on('keyup', '#name', function () {
            var text = $.trim($(this).val().toLowerCase());
            var text_create;

            text_create = text
                .replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a")
                .replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g, "e")
                .replace(/ì|í|ị|ỉ|ĩ/g, "i")
                .replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g, "o")
                .replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u")
                .replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y")
                .replace(/đ/g, "d")
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-+|-+$/g, '');

            $('#meta').val(text_create);
        }).keyup();
    </script>
}