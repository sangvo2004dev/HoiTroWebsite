@model HoiTroWebsite.Models.Menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.name)
        </dd>

        <dt>
            @Html.DisplayName("Liên kết")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.link)
        </dd>

        <dt>
            @Html.DisplayName("meta")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.meta)
        </dd>

        <dt>
            @Html.DisplayName("Hiển thị")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.hide)
        </dd>

        <dt>
            @Html.DisplayName("Sắp xếp")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.order)
        </dd>

        <dt>
            @Html.DisplayName("Ngày tạo")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.datebegin)
        </dd>

        <dt>
            @Html.DisplayName("Có menu con")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => Model.hasSubMenu)
        </dd>

        <dt>
            @Html.DisplayName("Menu con")
        </dt>

        @foreach (var s in Model.SubMenus)
        {
        <dd>
            @Html.DisplayFor(models => s.name)
        </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
